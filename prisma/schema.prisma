generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    user_id        String     @id @default(auto()) @map("_id") @db.ObjectId
    username       String     @unique
    password       String
    email          String
    phone          String
    name           String
    favoriteplaces Favorite[]
}

model Place {
    place_id     String        @id @default(auto()) @map("_id") @db.ObjectId
    name         String
    address      String
    city         String
    phone        String
    latitude     Float
    longitude    Float
    rating       Rating
    price        Price
    openinghours String
    category     Category[]
    delevryapps  Delevryapps[]

}

enum Category {
    Restaurant
    Cafe
    Bar
    FastFood
    Pub
    CoffeeShop
    Bakery
    IceCreamShop
